{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": [
        "src/*",
        "node_modules/*",
        "src/suites/vc-http-api/*"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true
  }
}